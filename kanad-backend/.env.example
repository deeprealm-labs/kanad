# Application
APP_NAME=Kanad Quantum Chemistry API
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=False

# API
API_PREFIX=/api
ALLOWED_ORIGINS=https://your-app.vercel.app,http://localhost:3000

# Database
DATABASE_URL=postgresql://kanad_user:kanad_password@localhost:5432/kanad_experiments

# Redis & Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security (IMPORTANT: Generate new keys for production!)
# Generate JWT secret: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=CHANGE_THIS_IN_PRODUCTION
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Generate encryption key: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=CHANGE_THIS_IN_PRODUCTION

# Cloud Providers (optional defaults)
IBM_API_TOKEN=
IBM_CRN=
BLUEQUBIT_TOKEN=

# AI Services
ANTHROPIC_API_KEY=

# Storage
UPLOAD_DIR=/tmp/kanad_uploads
MAX_UPLOAD_SIZE=10485760

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
