# Kanad API Environment Variables
# Copy this to .env and fill in your values

# Application
APP_NAME="Kanad Quantum Chemistry API"
DEBUG=True

# Database
DATABASE_URL=sqlite:///./kanad.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/kanad

# Job Queue
MAX_CONCURRENT_JOBS=2
JOB_TIMEOUT_SECONDS=3600

# CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Quantum Backends (optional)
IBM_QUANTUM_TOKEN=
BLUEQUBIT_API_KEY=

# Defaults
DEFAULT_METHOD=VQE
DEFAULT_ANSATZ=ucc
DEFAULT_MAPPER=jordan_wigner
DEFAULT_OPTIMIZER=SLSQP
DEFAULT_BACKEND=classical
DEFAULT_BASIS=sto-3g
